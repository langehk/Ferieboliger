@page "/ferieboliger"

    <MudPaper Width="100%" Class="pa-16" Elevation="0">

        <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Class="d-flex justify-center align-center flex-column">

            <h3>Ferieboliger</h3>

            <MudButton Variant="Variant.Filled" Color="Color.Secondary" @onclick="@changeView">@addFerieboligKnap</MudButton>

            @if (addFeriebolig)
            {
                <MudPaper Elevation="0" Width="50%">
                    <AddFeriebolig></AddFeriebolig>
                </MudPaper>
            }

            <ViewFerieboliger></ViewFerieboliger>

        </MudContainer>

    </MudPaper>

    @code {
        public bool addFeriebolig = false;
        public string addFerieboligKnap => addFeriebolig ? "Skjul formular" : "Tilføj feriebolig";


        void changeView()
        {
            addFeriebolig = !addFeriebolig;
        }
    }